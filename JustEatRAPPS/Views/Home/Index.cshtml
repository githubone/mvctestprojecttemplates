@model JustEatRAPPS.Models.MainRestaurantViewModel

<header class="navbar navbar-bright navbar-fixed-top" role="banner">

    <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a  href="@Url.Action("Index", "Home")" class="navbar-brand">JUSTEat Restaurants</a>
    </div>
    <div class="col-sm-3 col-md-3 pull-right">
        @using (Html.BeginForm("Index", "Home", new { @class = "navbar-form", role = "search" }))
        {
            <div class="input-group">
                @Html.ValidationMessageFor(model => model.PostCode)
            </div>
                    
            <div class="input-group">
                @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control" })
                @* <input type="text" class="form-control" placeholder="post code" name="postcode" id="postcode" value="@Model.PostCode">*@
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        }
    </div>
</header>


<div class="container">
    <h1>Restaurants</h1>
    <div class="panel panel-default">
        @if (Model != null && Model.Restaurants != null)
        {
            foreach (var viewModel in Model.Restaurants)
            {
            <div class="panel panel-primary">
                <div class="panel-heading">@viewModel.Name</div>
                <div class="panel-body">
                    @*<h4 class=""><i class="glyphicon glyphicon-user"></i></h4>*@
                     <h4 class="">Ratings</h4>
                    <span>@viewModel.RatingStars</span>
                    <hr />
                    <a href="@viewModel.Url">Go to @viewModel.Name</a>
                </div>

                <ul class="list-group">
                    <li class="list-group-item">List item 1</li>
                    <li class="list-group-item">List item 2</li>
                </ul>
            </div>
            }
        }
    </div>
</div>


